<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
                android:background="@color/colorBack"
                android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              tools:context="com.jaghory.nutricam.MainActivity"
    android:weightSum="1">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/likeButton"
        android:layout_gravity="top|right"
        android:src="@android:drawable/btn_star_big_on" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dislikeButton"
        android:layout_gravity="top|left"
        android:src="@android:drawable/btn_star_big_off" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/main_activity_text"
        android:id="@+id/textView"
        android:layout_weight="0.56"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="@string/take_picture"
        android:id="@+id/takePicture_btn"
        android:background="#842235"
        android:textColor="#f5f5f5"
        android:layout_marginBottom="20dp"
        android:textSize="@dimen/abc_text_size_medium_material"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="@string/view_food_history"
        android:id="@+id/viewHistory_btn"
        android:background="#842235"
        android:textColor="#f5f5f5"
        android:textSize="@dimen/abc_text_size_medium_material"/>

</LinearLayout>